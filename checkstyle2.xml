<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Severity για όλα: warning (άρα κιτρινο) -->
    <property name="severity" value="warning"/>

    <module name="TreeWalker">
        <!-- Να υπάρχει σωστή διάταξη αγκυλών -->
        <module name="WhitespaceAround">
        <property name="tokens" value="CLASS_DEF, METHOD_DEF, LITERAL_IF, LITERAL_FOR, LITERAL_WHILE, LITERAL_SWITCH"/>
        </module>

        <module name="LeftCurly"/>
        <module name="RightCurly"/>

        <!-- Να μην αφήνεις blocks εντελώς άδεια -->
        <module name="EmptyBlock"/>

        <!-- Να μην ξεχνάς κενά σε βασικά σημεία (όχι εμμονικά) -->
        <module name="WhitespaceAfter"/>
        <module name="WhitespaceAround"/>

        <!-- Να μην έχεις imports που δεν χρησιμοποιείς -->
        <module name="UnusedImports"/>

        <!-- Να μην έχεις διπλά imports -->
        <module name="RedundantImport"/>

        <!-- Να κρατάς γραμμές κάτω από 120 χαρακτήρες -->
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>

        <!-- Να μην ξεκινάς method names με κεφαλαίο -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
    </module>
</module>
